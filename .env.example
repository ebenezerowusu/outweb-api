# Application
NODE_ENV=development
PORT=3000
APP_NAME=OnlyUsedTesla-API
API_VERSION=v2

# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE=OnlyUsedTesla-v2

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=uploads

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Subscription Products & Prices
# Create these in Stripe Dashboard: https://dashboard.stripe.com/products
# Then add the IDs here

# Basic Plan (e.g., $99/month or $999/year)
STRIPE_PRODUCT_ID_BASIC=prod_xxxxxxxxxxxxx
STRIPE_PRICE_ID_BASIC_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ID_BASIC_YEARLY=price_xxxxxxxxxxxxx

# Pro Plan (e.g., $299/month or $2999/year)
STRIPE_PRODUCT_ID_PRO=prod_xxxxxxxxxxxxx
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ID_PRO_YEARLY=price_xxxxxxxxxxxxx

# Enterprise Plan (e.g., $999/month or $9999/year)
STRIPE_PRODUCT_ID_ENTERPRISE=prod_xxxxxxxxxxxxx
STRIPE_PRICE_ID_ENTERPRISE_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ID_ENTERPRISE_YEARLY=price_xxxxxxxxxxxxx

# One-time Payment Products
STRIPE_PRODUCT_ID_FEATURED_LISTING=prod_xxxxxxxxxxxxx
STRIPE_PRICE_ID_FEATURED_LISTING=price_xxxxxxxxxxxxx
STRIPE_PRODUCT_ID_BUMP_LISTING=prod_xxxxxxxxxxxxx
STRIPE_PRICE_ID_BUMP_LISTING=price_xxxxxxxxxxxxx
STRIPE_PRODUCT_ID_HIGHLIGHT_LISTING=prod_xxxxxxxxxxxxx
STRIPE_PRICE_ID_HIGHLIGHT_LISTING=price_xxxxxxxxxxxxx

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@onlyusedtesla.com
SENDGRID_FROM_NAME=OnlyUsedTesla

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# JWT
JWT_ACCESS_SECRET=your-jwt-access-secret
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_ACCESS_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# CORS
CORS_ORIGIN=http://localhost:3001,https://onlyusedtesla.com

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
